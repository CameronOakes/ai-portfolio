<div class="container">
  <div class="row">
    <div class="col-md-4 text-center">
      <%= cl_image_tag current_user.avatar.key, class: "avatar-profile", alt: "" %>
      <h1><%= @user.name %></h1>
      <p><%= @user.email %></p>
    </div>
    <div class="col-md-8">
      <h2>Favorite Libraries</h2>
      <ul>
        <% @libraries.each do |library| %>
          <li><%= library.name %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
