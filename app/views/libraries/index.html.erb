<div class="container">

  <div class="row">
    <% @libraries.each do |library| %>
      <div class="col-md-4">
        <div class="card m-2">
          <%= cl_image_tag library.photos.first.key, class: "card-img-top", width: 400, height: 300, crop: :fill %>
          <div class="card-body">
            <h3 class="card-title"><%= link_to library.name, library_path(library), class: "text-decoration-none" %></h3>
            <p class="card-text"><%= library.description %></p>
            <p class="card-text"><%= library.user.name %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
