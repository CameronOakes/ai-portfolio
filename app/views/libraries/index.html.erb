<div class="container">
  <div class="row">
    <div class="col-md-6">
      <ul class="list-group">
        <% @libraries.each do |library| %>
          <li class="list-group-item">
            <h3 class="text-decoration-none"><%= link_to library.name, library_path(library) %></h3>
            <br>
            <p><%= library.description %></p>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
